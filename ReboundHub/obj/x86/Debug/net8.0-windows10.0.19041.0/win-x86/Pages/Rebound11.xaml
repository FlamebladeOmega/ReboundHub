<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ReboundHub.Pages.Rebound11"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReboundHub.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <InfoBar
    IsOpen="True"
    Title="Update"
    Message="New update (v0.92.2083) is available!" 
            IsClosable="False">
            <InfoBar.ActionButton>
                <Button Content="Update"/>
            </InfoBar.ActionButton>
        </InfoBar>
        <Rectangle Fill="Transparent" Height="825" Width="1500" StrokeThickness="10"
           RadiusY="0" RadiusX="0">
            <Rectangle.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#7502CD" Offset="0.0"/>
                    <GradientStop Color="#79095C" Offset="0.52"/>
                    <GradientStop Color="#FF0063" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
            

        </Rectangle>
        <Image Height="250" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-400,0,0">
            <Image.Source>
                <BitmapImage UriSource="/Assets/logo.png"
DecodePixelHeight="100" />
            </Image.Source>
        </Image>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontFamily="Segoe UI"
                   FontWeight="Light"
                   FontSize="72"
                   Margin="0,325,0,0"
                       >Rebound11 v0.92.2070</TextBlock>
            <Button Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,400,0,0" Style="{StaticResource AccentButtonStyle}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE72E;" 
                          FontFamily="Segoe MDL2 Assets" 
                          Margin="0,0,8,0"/>
                    <TextBlock Text="Modify" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,500,0,0" Content="Uninstall" />
            <Button Width="100" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,600,0,0" Content="Repair" />
        </Grid>
    </Grid>
</Page>

